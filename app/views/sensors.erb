<!DOCTYPE html>
<html>
  <head>
    <title>Cloverleaf Dashboard</title>
    <!-- Bootstrap -->
    <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
	<link href="css/cloverleaf.css" rel="stylesheet">
  </head>
	<%= ERB.new(File.read("views/navbar.erb"), 0, "-").result(binding) %>
    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="bootstrap/js/bootstrap.min.js"></script>
	<div class="row">
		<div class="span12">
			<div class="btn-lights">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Sensor</th>
							<span class="label label-info">Work in progress.</span>
							<th>Status</th>
						</tr>
					</thead>
					
					<tbody>
						<tr>
							<td><button class="span3 btn-success btn-large"> Kitchen Motion</button></td>
							<td><button class="btn-success btn-large">On</button></td>
						</tr>
						<tr>
							<td><button class="span3 btn-success btn-large"> Entrance Motion</button></td>
							<td><button class="btn-danger btn-large">Off</button></td>
						</tr>
						<tr>
							<td><button class="span3 btn-success btn-large"> Front Door</button></td>
							<td><button class="btn-danger btn-large">Off</button></td>
						</tr>
						<tr>
							<td><button class="span3 btn-success btn-large"> Bathroom Water</button></td>
							<td><button class="btn-danger btn-large">Off</button></td>
						</tr>
					</tbody>
	  </div>
  </div>
  <div>
  </body>
</html>
