<!DOCTYPE html>
<html>
  <head>
    <title>Cloverleaf Dashboard</title>
    <!-- Bootstrap -->
	<link href="/bootstrap/css/bootstrap.css" rel="stylesheet">
	<link href="/css/cloverleaf.css" rel="stylesheet">
  </head>
<%= ERB.new(File.read("views/navbar.erb"), 0, "-").result(binding) %>
<%= ERB.new(File.read("views/settings_nav.erb"), 0, "-").result(binding) %>

    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    	<h2>Routers</h2>
    		<table class="table table-striped table-bordered">

<thead>
	<tr>
		<th><h4>ID</h4></th>
		<th><h4>Description</h4></th>
		<th><h4>Address</h4></th>
		<th><h4>Protocol</h4></th>
		<th><h4>Port</h4></th>
		<th><h4>Type</h4></th>
	</tr>
</thead>

<tbody>
	<ul class="routers"> <% @routers.each do |router| %>
		<tr>
			<td>
				<%= ::Temple::Utils.escape_html((router.router_id)) %>
			</td>
			<td>
				<%= ::Temple::Utils.escape_html((router.router_desc)) %>
			</td>
			<td>
				<%= ::Temple::Utils.escape_html((router.router_address)) %>
			</td>
			<td>
				<%= ::Temple::Utils.escape_html((router.router_protocol)) %>
			</td>
			<td>
				<%= ::Temple::Utils.escape_html((router.router_port)) %>
			</td>
			<td>
				<%= ::Temple::Utils.escape_html((router.router_type)) %>
			</td>
		<% end %>
	</ul>
</tbody>