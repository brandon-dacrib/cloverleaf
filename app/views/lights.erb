<!DOCTYPE html>
<html>
  <head>
    <title>Cloverleaf Dashboard</title>
    <!-- Bootstrap -->
	<link href="/bootstrap/css/bootstrap.css" rel="stylesheet">
	<link href="/css/lights.css" rel="stylesheet">
  </head>
  <body>
	  <div class="navbar">
	    <div class="navbar-inner">
	      <a class="brand" href="#">Cloverleaf Dashboard</a>
	      <ul class="nav">
			  <li class="divider-vertical"></li>
	        <li class="active"><a href="lights">Lights</a></li>
			<li class="divider-vertical"></li>
	        <li><a href="sensors">Sensors</a></li>
			<li class="divider-vertical"></li>
	        <li><a href="blinds">Blinds</a></li>
			<li class="divider-vertical"></li>
			<li><a href="settings">Settings</a></li>
			<li class="divider-vertical"></li>
	      </ul>
	    </div>
	  </div>
    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
	<div class="row">
		<div class="span12">
			<div class="btn-lights">
				<table class="table table-striped dashboard">
					<thead>
						<tr>
							<th>On</th>
							<th>Off</th>
							<th>Dim</th>
							<th>Status <span class="label label-info">broken</span></th>
						</tr>
					</thead>
					
					<tbody>
						<tr>
						<td><button class="span3 btn btn-success btn-large" data-switch-uri="/api/do/21%2016%2039%201/1/"> Master Bedroom</button></td>
						<td><button class="span3 btn btn-danger btn-large" data-switch-uri="/api/do/21%2016%2039%201/0/"> Master Bdroom</button></td>
						<td>
						<div class="btn-group">
						<button type="button" class="btn btn-warning btn-large" data-switch-uri="/api/do/21%2016%2039%201/2/"><i class="icon-arrow-up icon-white"></i>Up</button>
						<button type="button" class="btn btn-warning btn-large" data-switch-uri="/api/do/21%2016%2039%201/2/"><i class="icon-pause icon-white"></i>Stop</button>
						<button type="button" class="btn btn-warning btn-large" data-switch-uri="/api/do/21%2016%2039%201/2/"><i class="icon-arrow-down icon-white"></i>Down</button>
						</div>
						<td><button class="btn-success btn-large">On</button></td>
						</tr>

						<tr>
						<td><button class="span3 btn btn-success btn-large" data-switch-uri="/api/do/23 6A 9 1/1/"> Living Room</button></td>
						<td><button class="span3 btn btn-danger btn-large" data-switch-uri="/api/do/23 6A 9 1/0/"> Living Room</button></td>
						<td><button class="span3 btn btn-warning btn-large disabled" data-switch-uri="/api/do/23 6A 9 1/2/"> Living Room</button></td>
						<td><button class="btn-danger btn-large">Off</button></td>
						</tr>

						<tr>
						<td><button class="span3 btn btn-success btn-large" data-switch-uri="/api/do/21 12 BE 1/1/"> Second Bedroom</button></td>
						<td><button class="span3 btn btn-danger btn-large" data-switch-uri="/api/do/21 12 BE 1/0/"> Second Bedroom</button></td>
						<td><button class="span3 btn btn-warning btn-large" data-switch-uri="/api/do/21 12 BE 1/2/"> Second Bedroom</button></td>
						<td><button class="btn-danger btn-large">Off</button></td>
						</tr>
					</tbody>
	  </div>
  </div>
  <div>
  <script src="/js/cloverleaf.js"></script>
  </body>
</html>
